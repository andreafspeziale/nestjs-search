  },
  "homepage": "https://github.com/andreafspeziale/nestjs-search#readme",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "prepare": "husky",
    "build:check": "tsc --noEmit",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
